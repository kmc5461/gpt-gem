generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- KULLANICI YÖNETİMİ ---

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  name          String?
  passwordHash  String?
  role          Role      @default(CUSTOMER)
  riskScore     Float     @default(0.0)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  orders        Order[]
  addresses     Address[]
  reviews       Review[]
  auditLogs     AuditLog[]
}

enum Role {
  CUSTOMER
  ADMIN
  SUPPORT
  WAREHOUSE_MANAGER
}

// --- ÜRÜN KATALOĞU ---

model Category {
  id          String    @id @default(uuid())
  name        String
  slug        String    @unique
  description String?
  parentId    String?
  parent      Category? @relation("CategoryHierarchy", fields: [parentId], references: [id])
  children    Category[] @relation("CategoryHierarchy")
  products    Product[]
}

model Product {
  id            String    @id @default(uuid())
  name          String
  slug          String    @unique
  description   String    @db.Text
  basePrice     Decimal   @db.Decimal(10, 2)
  currentPrice  Decimal   @db.Decimal(10, 2)
  categoryId    String
  category      Category  @relation(fields: [categoryId], references: [id])
  active        Boolean   @default(true)
  demandScore   Float     @default(50.0) // AI Analitik skoru
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  variants      Variant[]
  images        Image[]
  reviews       Review[]
  priceRules    DynamicPriceRule[]
}

model Variant {
  id          String    @id @default(uuid())
  productId   String
  product     Product   @relation(fields: [productId], references: [id], onDelete: Cascade)
  sku         String    @unique
  attributes  Json      // Örn: { "color": "Black", "size": "L" }
  priceAdjustment Decimal @default(0.0) // Ana fiyata eklenecek fark

  stock       Stock?    // One-to-One: Her varyantın bir stok kaydı vardır
  orderItems  OrderItem[]
}

model Image {
  id        String  @id @default(uuid())
  url       String
  altText   String?
  isPrimary Boolean @default(false)
  productId String
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
}

// --- ENVANTER & STOK ---

model Stock {
  id                String   @id @default(uuid())
  variantId         String   @unique
  variant           Variant  @relation(fields: [variantId], references: [id])
  quantity          Int      @default(0)
  reserved          Int      @default(0) // Sepetteki ürünler için rezerv
  warehouseLocation String?  // Örn: "Aisle-4-Shelf-B"
  updatedAt         DateTime @updatedAt
}

// --- SİPARİŞ & ÖDEME ---

model Order {
  id              String      @id @default(uuid())
  userId          String?
  user            User?       @relation(fields: [userId], references: [id])
  status          OrderStatus @default(PENDING)
  total           Decimal     @db.Decimal(10, 2)
  currency        String      @default("USD")
  
  // Adres İlişkileri
  shippingAddressId String?
  billingAddressId  String?
  shippingAddress   Address?  @relation("ShippingAddress", fields: [shippingAddressId], references: [id])
  billingAddress    Address?  @relation("BillingAddress", fields: [billingAddressId], references: [id])

  // Güvenlik & Ödeme
  paymentId       String?     @unique
  payment         Payment?    @relation(fields: [paymentId], references: [id])
  fraudScore      FraudScore?
  
  items           OrderItem[]
  rmaRequests     RMARequest[]
  
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
}

model OrderItem {
  id        String   @id @default(uuid())
  orderId   String
  order     Order    @relation(fields: [orderId], references: [id])
  variantId String
  variant   Variant  @relation(fields: [variantId], references: [id])
  sku       String
  quantity  Int
  price     Decimal  @db.Decimal(10, 2) // Satın alma anındaki fiyat
}

model Address {
  id        String  @id @default(uuid())
  userId    String
  user      User    @relation(fields: [userId], references: [id])
  title     String  // Örn: "Evim"
  line1     String
  line2     String?
  city      String
  state     String?
  zipCode   String
  country   String
  
  shippingOrders Order[] @relation("ShippingAddress")
  billingOrders  Order[] @relation("BillingAddress")
}

model Payment {
  id            String        @id @default(uuid())
  provider      String        // "STRIPE", "PAYPAL"
  transactionId String        @unique
  amount        Decimal       @db.Decimal(10, 2)
  status        PaymentStatus
  createdAt     DateTime      @default(now())
  
  order         Order?
}

enum OrderStatus {
  PENDING
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
  RETURNED
  RISK_REVIEW
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

// --- RİSK & AI ---

model FraudScore {
  id        String   @id @default(uuid())
  orderId   String   @unique
  order     Order    @relation(fields: [orderId], references: [id])
  score     Float    // 0.0 - 100.0
  factors   Json     // Risk faktörleri: ["IP_MISMATCH", "HIGH_VALUE"]
  decision  String   // "APPROVE", "MANUAL_REVIEW", "REJECT"
  createdAt DateTime @default(now())
}

model DynamicPriceRule {
  id               String   @id @default(uuid())
  productId        String
  product          Product  @relation(fields: [productId], references: [id])
  condition        Json     // Örn: { "min_stock": 10, "min_views": 1000 }
  adjustmentFactor Float    // Örn: 1.10 (%10 artış)
  active           Boolean  @default(true)
}

// --- DESTEK & LOGLAMA ---

model RMARequest {
  id        String    @id @default(uuid())
  orderId   String
  order     Order     @relation(fields: [orderId], references: [id])
  reason    String
  status    RMAStatus @default(PENDING)
  images    String[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

enum RMAStatus {
  PENDING
  APPROVED
  REJECTED
  REFUNDED
}

model AuditLog {
  id        String   @id @default(uuid())
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  action    String   // "UPDATE_PRICE", "DELETE_PRODUCT"
  resource  String   // "Product:123"
  details   Json?
  ipAddress String?
  createdAt DateTime @default(now())
}

model Review {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  productId String
  product   Product  @relation(fields: [productId], references: [id])
  rating    Int
  comment   String?
  createdAt DateTime @default(now())
}
